                                        <h4>@Model.totalReceivedCount</h4>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                        
                        <div class="card">
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="centermo">
                                        <label><b>Active Computers</b></label>
                                        <h4>@Model.totalComputersCount</h4>
                                    </div>
                                </div>
                                <div class="col-sm-5">
                                    <div class="centermo">
                                        <label><b>Active Machine & Equipments</b></label>
                                        <h4>@Model.totalEqpCount</h4>
                                    </div>
                                </div>
                            </div>
                            
                        </div>
                        
                    </div>
                    
                    
                    
                </div>
                
            </div>
        </div>
        
    </div>

    @* LAYER 2 *@

    <div class="col-md-6">
        <div class="card shadow mb-4" style="padding:10px;">
            <div class="card-header">
                <strong class="card-title">Purchase Items</strong>
            </div>
            <canvas id="categoryChart2"></canvas>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card shadow mb-4" style="padding:10px;">
            <div class="card-header">
                <strong class="card-title">Purchase Status</strong>
            </div>
            <canvas id="categoryChart3"></canvas>
        </div>
    </div>
    
</div>





<table hidden id="pur_table" class="table" style="font-size:12px;">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Purchasing.date_request)</th>
            <th>@Html.DisplayNameFor(model => model.Purchasing.category)</th>
            <th>@Html.DisplayNameFor(model => model.Purchasing.part_number)</th>
            <th>@Html.DisplayNameFor(model => model.Purchasing.item_description)</th>
            <th>@Html.DisplayNameFor(model => model.Purchasing.request_reason)</th>
            <th>@Html.DisplayNameFor(model => model.Purchasing.request_status)</th>
            <th>@Html.DisplayNameFor(model => model.Purchasing.date_received)</th>
            <th>@Html.DisplayNameFor(model => model.Purchasing.item_comment)</th>

            <th hidden>@Html.DisplayNameFor(model => model.Purchasing.pr_path)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.purchasing)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.date_request)</td>
                <td>@Html.DisplayFor(modelItem => item.category)</td>
                <td>@Html.DisplayFor(modelItem => item.part_number)</td>
                <td>@Html.DisplayFor(modelItem => item.item_description)</td>
                <td>@Html.DisplayFor(modelItem => item.request_reason)</td>
                <td>@Html.DisplayFor(modelItem => item.request_status)</td>
                <td>@Html.DisplayFor(modelItem => item.date_received)</td>
                <td>@Html.DisplayFor(modelItem => item.item_comment)</td>

                <td hidden>@Html.DisplayFor(modelItem => item.pr_path)</td>
            </tr>
        }
    </tbody>
</table>

<table hidden id="con_table" class="table" style="font-size:12px;">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Consumables.item_category)</th>
            <th>@Html.DisplayNameFor(model => model.Consumables.part_number)</th>
            <th>@Html.DisplayNameFor(model => model.Consumables.item_description)</th>
            <th>@Html.DisplayNameFor(model => model.Consumables.total_qty)</th>
            <th hidden>@Html.DisplayNameFor(model => model.Consumables.item_picture)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.consumables)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.item_category)</td>
                <td>@Html.DisplayFor(modelItem => item.part_number)</td>
                <td>@Html.DisplayFor(modelItem => item.item_description)</td>
                <td>@Html.DisplayFor(modelItem => item.total_qty)</td>
                <td hidden>@Html.DisplayFor(modelItem => item.item_picture)</td>
            </tr>
        }
    </tbody>
</table>




<script>
    // Get the current date
    var currentDate = new Date();

    // Define an array of month names
    var monthNames = ["January", "February", "March", "April", "May", "June",
        "July", "August", "September", "October", "November", "December"];

    // Get the month index (months are zero-based)
    var monthIndex = currentDate.getMonth();

    // Get the month name from the array using the month index
    var currentMonthName = monthNames[monthIndex];

    // Display the current month name in the HTML
    document.getElementById("currentMonth").innerText = currentMonthName;
</script>