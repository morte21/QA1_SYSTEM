    @* LAYER 1 *@
    <div class="col-md-6">
        <div class="card shadow mb-4" style="padding:10px;">
            <div class="card-header">
                <strong class="card-title">Stocks</strong>
            </div>
            <canvas id="categoryChart"></canvas>
        </div>
    </div>
    <div class="col-md-6">
