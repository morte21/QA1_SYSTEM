@model Global


@{
    ViewData["Title"] = "Consumables";
}

<h4>CONSUMABLES</h4>

@* GRAPH *@
<div class="card shadow mb-4" style=" width:100%; height:80vh; padding-left:10px; padding-right:10px; color:black;">
    <div class="card-header">
        <strong class="card-title">Cabinet Stocks Monitoring</strong>
    </div>
    <div class="container card-body">
        <div class="row">
            <div class="col-md-6 col-sm-12">
                <div class="card-body" style="height:40vh;">
                    <canvas id="categoryChart"></canvas>
                </div>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="card-body" style="padding:5px;">
                        <table id="consumableHome_table" class="table" style="color:black;">
                            <thead>
                                <tr>
                                    <th hidden>
                                        @Html.DisplayNameFor(model => model.Consumables.item_category)
                                        @Html.DisplayNameFor(model => model.Consumables.part_number)
                                        @Html.DisplayNameFor(model => model.Consumables.item_description)
                                        @Html.DisplayNameFor(model => model.Consumables.total_qty)
                                        @Html.DisplayNameFor(model => model.Consumables.item_picture)
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.consumables)
                                {
                                    <tr>
                                        <td>
                                            <div class="card" style="align-items: center; justify-items:center; width:20rem; height:15rem;">
                                                <div class="row">
                                                    <div class="col-md-6" style="padding:20px;">
                                                        Category: @Html.DisplayFor(modelItem => item.item_category)<br />
                                                        Part #:   @Html.DisplayFor(modelItem => item.part_number)<br />
                                                        Description:    @Html.DisplayFor(modelItem => item.item_description)<br />
                                                        Total Qty:      @Html.DisplayFor(modelItem => item.total_qty)<br />
                                                    </div>
                                                    <div class="col-md-6" style="padding:20px;">
                                                        @if (!string.IsNullOrEmpty(item.item_picture))
                                                        {
                                                            <img class="image" src="~/consumables/@item.item_picture" alt="@item.part_number" style="width:100%;" />
                                                        }
                                                        else
                                                        {
                                                            <!-- Placeholder or default image -->
                                                            <img class="image" src="~/images/placeholder.jpg" alt="No Image Available" style="width:100%;" />
                                                        }
                                                    </div>
                                                </div>
                                            </div>

                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    
                </div>
            </div>

        </div>
    </div>
</div>

<table hidden id="con_table" class="table" style="font-size:12px;">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Consumables.item_category)</th>
            <th>@Html.DisplayNameFor(model => model.Consumables.part_number)</th>
            <th>@Html.DisplayNameFor(model => model.Consumables.item_description)</th>
            <th>@Html.DisplayNameFor(model => model.Consumables.total_qty)</th>
            <th hidden>@Html.DisplayNameFor(model => model.Consumables.item_picture)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.consumables)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.item_category)</td>
                <td>@Html.DisplayFor(modelItem => item.part_number)</td>
                <td>@Html.DisplayFor(modelItem => item.item_description)</td>
                <td>@Html.DisplayFor(modelItem => item.total_qty)</td>
                <td hidden>@Html.DisplayFor(modelItem => item.item_picture)</td>
            </tr>
        }
    </tbody>
</table>



