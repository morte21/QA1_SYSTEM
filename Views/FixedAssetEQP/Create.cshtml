@model QA1_SYSTEM.Models.FixedAssetEQP

@{
    ViewData["Title"] = "Create";
}

<h4>Fixed Asset</h4>
<hr />
<div class="card" style="padding:10px;">
    <form asp-action="Create" asp-controller="FixedAssetEQP" method="POST">
        <div class="container">
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input required hidden asp-for="EQPid" class="form-control"/>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="fixed_asset_no" class="control-label"></label>
                        <input asp-for="fixed_asset_no" class="form-control" />
                        <span asp-validation-for="fixed_asset_no" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="fixed_asset_date" class="control-label"></label>
                        <input type="date" asp-for="fixed_asset_date" class="form-control" />
                        <span asp-validation-for="fixed_asset_date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="inventory_found" class="control-label"></label>
                        <select required asp-for="inventory_found" class="form-control">
                            <option value="">Select</option>
                            <option value="YES">YES</option>
                            <option value="NO">NO</option>
                        </select>
                        <span asp-validation-for="inventory_found" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="inventory_date" class="control-label"></label>
                        <input type="date" asp-for="inventory_date" class="form-control" />
                        <span asp-validation-for="inventory_date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="inventory_year" class="control-label"></label>
                        <input type="number" asp-for="inventory_year" class="form-control" />
                        <span asp-validation-for="inventory_year" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="item_location" class="control-label"></label>
                        <input asp-for="item_location" class="form-control" />
                        <span asp-validation-for="item_location" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="pic_path" class="control-label"></label>
                        <input asp-for="pic_path" class="form-control" />
                        <span asp-validation-for="pic_path" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>

                </div>
            </div>
        </div>
       
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
