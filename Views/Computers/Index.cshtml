@model IEnumerable<QA1_SYSTEM.Models.Computers>

@{
    ViewData["Title"] = "Index";
}

<h1>COMPUTER MASTERLIST</h1>

<div>
    <div class="d-flex justify-content-between">
        <div>
            <a asp-action="Create" style="background-color: #007bff; color: #fff; padding: 10px 20px; text-decoration: none;" data-bs-toggle="modal" data-bs-target="#createmodal">Create New</a>
        </div>
    </div>
</div>
<div class="card" style="padding:20px;">
    <hr />
    <div class="table-responsive text-nowrap">
        <table id="computers_table" class="display" style="width:100%">
            <thead>
                <tr>
                    <th>A C T I O N</th>
                    <th>@Html.DisplayNameFor(model => model.date_reg)</th>
                    <th>@Html.DisplayNameFor(model => model.computer_category)</th>
                    <th>@Html.DisplayNameFor(model => model.processor_name)</th>
                    <th>@Html.DisplayNameFor(model => model.ram_capacity)</th>
                    <th>@Html.DisplayNameFor(model => model.hdd_capacty)</th>
                    <th>@Html.DisplayNameFor(model => model.os_installed)</th>
                    <th>@Html.DisplayNameFor(model => model.ip)</th>
                    <th>@Html.DisplayNameFor(model => model.macAddress)</th>
                    <th>@Html.DisplayNameFor(model => model.active_user)</th>
                    <th hidden>@Html.DisplayNameFor(model => model.path_pic)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ComputerId" data-bs-toggle="modal" data-bs-target="#editmodal" onclick="loadEditModalComputer(@item.ComputerId)">Edit</a>  |
                            <a asp-action="Details" asp-route-id="@item.ComputerId" data-bs-toggle="modal" data-bs-target="#detailmodal" onclick="loadDetailsModalComputer(@item.ComputerId)">Details</a>

                        </td>
                        <td>@Html.DisplayFor(modelItem => item.date_reg)</td>
                        <td>@Html.DisplayFor(modelItem => item.computer_category)</td>
                        <td>@Html.DisplayFor(modelItem => item.processor_name)</td>
                        <td>@Html.DisplayFor(modelItem => item.ram_capacity)</td>
                        <td>@Html.DisplayFor(modelItem => item.hdd_capacty)</td>
                        <td>@Html.DisplayFor(modelItem => item.os_installed)</td>
                        <td>@Html.DisplayFor(modelItem => item.ip)</td>
                        <td>@Html.DisplayFor(modelItem => item.macAddress)</td>
                        <td>@Html.DisplayFor(modelItem => item.active_user)</td>
                        <td hidden>@Html.DisplayFor(modelItem => item.path_pic)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



<!-- Modal from add data-->
<div class="modal fade" id="createmodal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Computer Information</h1>
                <div class="outer">
                    <div data-bs-dismiss="modal" class="inner">
                        <label class="labelModal">Back</label>
                    </div>
                </div>
            </div>
            <div class="modal-body">
                @{

                    Html.RenderPartial("~/Views/Computers/Create.cshtml", new Computers() );
                }
            </div>

        </div>
    </div>
</div>


<!-- Modal from add data-->
<div class="modal fade" id="editmodal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Register</h1>
                <div class="outer">
                    <div data-bs-dismiss="modal" class="inner">
                        <label class="labelModal">Back</label>
                    </div>
                </div>
            </div>
            <div class="modal-body">
                @{
                    Html.RenderPartial("~/Views/Computers/Edit.cshtml", new Computers());
                }
            </div>

        </div>
    </div>
</div>


<!-- Modal from add data-->
<div class="modal fade" id="detailmodal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Computer Details</h1>
                <div class="outer">
                    <div data-bs-dismiss="modal" class="inner">
                        <label class="labelModal">Back</label>
                    </div>
                </div>
            </div>
            <div class="modal-body">
                @{
                    Html.RenderPartial("~/Views/Computers/Details.cshtml", new Computers());
                }
            </div>

        </div>
    </div>
</div>


