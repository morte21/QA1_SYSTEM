<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/plugins/images/logo.png" sizes="32x32" type="image/png">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <link rel="stylesheet" href="/lib/bootstrap-5.3.2-dist/css/bootstrap.min.css" asp-append-version="true" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    
    <link href="https://fonts.googleapis.com/css?family=Fira+Mono:400" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Ubuntu:300" rel="stylesheet">
    
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <style>
        body {
            background-image: url('/images/210922.jpg');  
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            /* Additional styles for centering the content */
            flex-direction: column;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Fira Mono', monospace;
            margin: 0;
            padding: 0;
            
        }


        .divG {
          animation: glitch 1s linear infinite;
        }

        
    </style>
    <title>@ViewBag.Title</title>
</head>
<body>
    
    <div class="divG">
        <div style="font-size: 96px; color:white" title="QA1 SYSTEM">QA1 SYSTEM</div>
    </div>
    <div>
        @RenderBody()
    </div>
    
    <!-- All Jquery -->
    <script src="/lib/bootstrap-5.3.2-dist/js/bootstrap.min.js"></script>


    <script src="/lib/bootstrap-5.3.2-dist/js/bootstrap.bundle.min.js"></script>
    @*<script src="~/js/site.js" asp-append-version="true"></script>*@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
