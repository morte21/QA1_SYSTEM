@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = Request.Path.StartsWithSegments("/Account/Login") ? null : "~/Views/Shared/_LoginLayout.cshtml";
}


    <div class="card" style="padding:20px;">
        <div class="row">
            <div class="col-md-12">
                <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h2>Create a new account.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating" style="padding:5px;">
                        
                        <input asp-for="Input.Firstname"
                               type="text"
                               class="form-control"
                               autocomplete="firstname" aria-required="true"
                               autofocus />
                        <label asp-for="Input.Firstname"></label>
                    </div>
                    <div class="form-floating" style="padding:5px;">
                        <input asp-for="Input.Lastname" type="text" class="form-control" autocomplete="lastname" aria-required="true" />
                        <label asp-for="Input.Lastname"></label>
                    </div>
                    <div class="form-floating" style="padding:5px;">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating" style="padding:5px;">
                        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.Password"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating" style="padding:5px;">
                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                        <label asp-for="Input.ConfirmPassword"></label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-floating" style="padding:5px;">
                        <select asp-for="Input.Role" asp-items="@((IEnumerable<SelectListItem>)ViewData["RoleList"])" class="form-select" autocomplete="roles" aria-required="true">
                            <option disabled selected> Select Role </option>
                        </select>
                        <span asp-validation-for="Input.Role" class="text-danger"></span>
                    </div>
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                </form>
            </div>
            <div style="padding-top:10px;">
                <a asp-action="Index">Back to Main</a>
            </div>
            
        </div>
    </div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
