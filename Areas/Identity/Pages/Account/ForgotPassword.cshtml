@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
    Layout = Request.Path.StartsWithSegments("/Account/Login") ? null : "~/Views/Shared/_LoginLayout.cshtml";
}


<div class="card" style="padding:20px; width:400px; height: 400px;">
        <h2>Forgot your password?</h2>
        <hr />
        <h4>Enter your email</h4>

        <div class="row" style="padding-top:10px;">
            <div class="col-md-12">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating" >
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div style="padding-top:10px; display: flex; flex-direction: column; height:15vh; justify-content: flex-end;">
                        <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
                    </div>
                    
                </form>
            </div>
        </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
